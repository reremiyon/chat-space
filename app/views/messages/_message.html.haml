.message
  .upper-message
    .upper-message__user-name
      = message.user.name
    .upper-message__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .under-message
    - if message.content.present?
      %p.under-message__content
        = message.content
    = image_tag message.image.url, class: 'under-message__image' if message.image.present?